@model KataMVCApps.Models.MorseCodeModel

@{
    ViewBag.Title = "MorseCode";
}

<h2>Morse Code</h2>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("MorseCodeResult", "MorseCode"))
        {
            <div class="form-group">
                <label>Enter a word you wish converted to Morse Code: </label>
                @Html.TextBoxFor(m => m.input, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Submit</button>
        }
    </div>
</div>
