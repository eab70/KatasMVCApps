@model KataMVCApps.Models.UnsplicedModel
@{
    ViewBag.Title = "Unspliced";
}

<h2>Unsplice</h2>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("UnsplicedResult", "Unspliced"))
        {
            <div class="form-group">
                <label>Enter a combination of letters, \\ and \n: </label>
                @Html.TextBoxFor(m => m.input, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Click here to see the \\ and \n removed (but only in cases where \\ immediately precede \n).</button>
        }
    </div>
</div>